<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/courier_guid_rl_top"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/all_top_backgroup" >

        <ImageView
            android:id="@+id/courier_guid_iv_top_left"
            style="@style/text_padding_all_10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="iv_top_left"
            android:src="@drawable/sender_ddress_top_left_bt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_setting_tv_6"
            android:textSize="22sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dip"
        android:drawableTop="@drawable/about_us_logo220"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/TextColorRed"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/about_us_rl_vision"
        style="@style/text_padding_tb_10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/edit_text"
        android:clickable="true"
        android:onClick="rl_vision" >

        <TextView
            style="@style/text_size17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:text="@string/set_vision"
            android:textColor="@color/index_gray" />

        <TextView
            android:id="@+id/about_us_tv_vision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/index_gray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us_rl_service_item"
        style="@style/text_padding_tb_10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/edit_text"
        android:clickable="true"
        android:onClick="rl_service_item" >

        <TextView
            style="@style/text_size17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:text="@string/set_service_item"
            android:textColor="@color/index_gray" />

        <ImageView
            style="@style/text_padding_all_5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user_setting_bt_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_us_rl_connect_us"
        style="@style/text_padding_tb_10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/edit_text"
        android:clickable="true"
        android:onClick="rl_connect_us" >

        <TextView
            style="@style/text_size17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:text="@string/set_connect_us"
            android:textColor="@color/index_gray" />

        <ImageView
            style="@style/text_padding_all_5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user_setting_bt_right" />
    </RelativeLayout>

</LinearLayout>