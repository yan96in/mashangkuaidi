<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.striveen.express"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_left_backgroup" >

    <RelativeLayout
        android:id="@+id/index_top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/index_iv_top_handle"
            style="@style/text_padding_all_10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="iv_top_handle"
            android:src="@drawable/index_handle_left" />

        <TextView
            style="@style/text_padding_all_5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/index_top_tetle"
            android:textSize="22sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/index_bottom_ll"
        android:layout_below="@+id/index_top_rl" >

        <LinearLayout
            android:id="@+id/index_ll_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TextColorWhite"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/index_locate_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/index_top_backgroup"
                android:clickable="true"
                android:onClick="locate_rl_address" >

                <ImageView
                    android:id="@+id/index_iv_locate"
                    style="@style/text_padding_all_10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/index_iv_mylocate" />

                <TextView
                    android:id="@+id/index_tv_mylocate"
                    style="@style/text_padding_all_5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/index_iv_mylocate"
                    android:layout_toRightOf="@+id/index_iv_locate"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/index_iv_mylocate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dip"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/index_top_right" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/index_my_mapv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true" >
                </com.baidu.mapapi.map.MapView>

                <ImageView
                    android:id="@+id/index_iv_customes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:onClick="iv_Customes"
                    android:src="@drawable/user_order_datile_avatar"
                    android:visibility="gone" />
            </FrameLayout>

            <ImageView
                android:id="@+id/index_iv_map_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dip"
                android:layout_marginTop="-72dip"
                android:clickable="true"
                android:onClick="iv_map_locate"
                android:src="@drawable/index_map_locate"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/index_rl_recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/index_locate_rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/index_top_backgroup"
                android:visibility="invisible" >

                <TextView
                    style="@style/text_padding_all_5dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/index_ll_map1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/index_locate_rl1" >

                <ImageView
                    android:id="@+id/index_iv_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/index1_voice_backgroud1" />

                <RelativeLayout
                    android:id="@+id/index_rl_yuyin"
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:layout_centerInParent="true"
                    android:background="@drawable/index1_yuan"
                    android:orientation="vertical" >

                    <com.striveen.express.view.RoundProgressBar
                        android:id="@+id/index_rpb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android_custom:roundProgressColor="#ffffffff"
                        android_custom:roundWidth="1dip"
                        android_custom:textIsDisplayable="false" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/index1_voice" />

                        <TextView
                            android:id="@+id/index_tv_time"
                            style="@style/text_padding_all_5dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/index1_tv_recording_number"
                            android:textColor="@color/TextColorWhite"
                            android:textSize="22sp" />
                    </LinearLayout>
                </RelativeLayout>
                <!-- android:layout_alignBottom="@+id/index_iv_" -->
                <!-- android:paddingBottom="60dip" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:paddingTop="170dip"
                    android:text="@string/index_toast_yuyin"
                    android:textColor="@color/TextColorWhite" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>
    <!-- 最底部布局 -->

    <LinearLayout
        android:id="@+id/index_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/index_bottom_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/index_bottom_backgroup" >

            <CheckBox
                android:id="@+id/index_cb_bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:button="@drawable/checkbtn_style"
                android:checked="true"
                android:paddingRight="6dip" />

            <TextView
                android:id="@+id/index_tv_bottom_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/index_iv_bottom_right"
                android:layout_toRightOf="@+id/index_cb_bottom_left"
                android:background="@drawable/index_bt_voice"
                android:clickable="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:onClick="tv_bottom_address"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:text="@string/index_tv_address11"
                android:textColor="@color/text_gray"
                android:textSize="20sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/index_et_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/index_iv_bottom_right"
                android:layout_toRightOf="@+id/index_cb_bottom_left"
                android:background="@drawable/index_tv_bottom_address"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/index_tv_address"
                android:imeOptions="actionSearch"
                android:maxLength="50"
                android:paddingLeft="15dip"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="20sp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/index_rl_bottom_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_toLeftOf="@+id/index_iv_bottom_right"
                android:layout_toRightOf="@+id/index_cb_bottom_left" >

                <RelativeLayout
                    android:id="@+id/index_rl_mashang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/index_backgroud1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/index_rl1_iv"
                        android:text="@string/index_rl1_tv1"
                        android:textColor="@color/TextColorWhite"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/index_rl1_iv"
                        android:layout_width="30dip"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/index_rl1_iv"
                        android:text="@string/index_rl1_tv2"
                        android:textColor="@color/TextColorWhite"
                        android:textSize="24sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/index_tv_bottom_recording"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/index_iv_recording1"
                    android:gravity="center"
                    android:text="@string/index_tv_recording"
                    android:textColor="@color/TextColorWhite"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/index_iv_mashang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="25dip"
                    android:src="@drawable/index_yuyin" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/index_iv_bottom_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="iv_bottom_right"
                android:paddingRight="5dip"
                android:src="@drawable/index_yuyue" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>