<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/item_dialog_item_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dip"
        android:background="@color/index3_dialog_select" >

        <ImageView
            android:id="@+id/item_dialog_item_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:background="@drawable/item_index3_cancle_iv_select"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/item_dialog_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/item_dialog_item_iv_left"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/index3_cancle_tv_title"
            android:textSize="19sp" />
    </RelativeLayout>

</RelativeLayout>