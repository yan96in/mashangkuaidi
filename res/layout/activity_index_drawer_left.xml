<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_left_backgroup" >

    <LinearLayout
        android:id="@+id/action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/index_left_iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dip"
            android:src="@drawable/index_no_login_portrait" />
        
        <TextView 
            android:id="@+id/user_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="17sp"
            android:text="15026555209"
            />

        <LinearLayout
            android:id="@+id/index_left_ll_order"
            style="@style/padding_tb_8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index_left_order" />

            <TextView
                style="@style/text_gray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="@string/index_left_tv_order"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/index_left_ll_balance"
            style="@style/padding_tb_8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="left_ll_balance"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index_left_balance" />

            <TextView
                style="@style/text_gray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="@string/index_left_tv_balance"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/index_left_ll_friend"
            style="@style/padding_tb_8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index_left_setting" />

            <TextView
                style="@style/text_gray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="@string/index_left_tv_friend"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/index_left_ll_invite"
            style="@style/padding_tb_8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="ll_invite"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index_left_invite" />

            <TextView
                style="@style/text_gray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="@string/index_lefSt_tv_invite"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/index_left_ll_setting"
            style="@style/padding_tb_8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index_left_friend" />

            <TextView
                style="@style/text_gray_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:text="@string/index_lefSt_tv_setting"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>