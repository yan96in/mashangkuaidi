<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/all_top_backgroup" >

        <ImageView
            android:id="@+id/sender_ddress_iv_top_left"
            style="@style/text_padding_all_5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/sender_ddress_top_left_bt" />

        <EditText
            android:id="@+id/sender_ddress_et_top_center"
            style="@style/etpersonal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:layout_toLeftOf="@+id/sender_ddress_bt_top_right"
            android:layout_toRightOf="@+id/sender_ddress_iv_top_left"
            android:background="@drawable/sender_ddress_top_et"
            android:hint="@string/sender_address_et"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="15dip"
            android:textColor="@color/text_gray"
            android:textSize="17sp" />

        <Button
            android:id="@+id/sender_ddress_bt_top_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:background="@drawable/sender_ddress_top_right_bt"
            android:gravity="center"
            android:text="@string/Ensure"
            android:textColor="@color/TextColorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.striveen.express.view.MyLoadMoreListView
            android:id="@+id/common_address_mlv_addresss"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </com.striveen.express.view.MyLoadMoreListView>

        <LinearLayout
            android:id="@+id/sender_ddress_ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="证大五道口广场"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="上海 浦东 李冰路1106号"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sender_ddress_line" />

        <LinearLayout
            android:id="@+id/sender_ddress_ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="证大五道口商业中心"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="上海 浦东 李冰路1106号"
                android:textColor="@color/text_gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>