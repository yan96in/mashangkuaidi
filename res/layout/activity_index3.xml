<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/index3_top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/index3_iv_top_handle"
            style="@style/text_padding_all_10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="iv_top_handle"
            android:src="@drawable/index_handle_left" />

        <TextView
            style="@style/text_padding_all_5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/index_top_tetle"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/index3_tv_top_right"
            style="@style/text_padding_all_5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="tv_top_right"
            android:text="@string/index3_top_tetle_right"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/index3_bottom_rl"
        android:layout_below="@+id/index3_top_rl"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_order_datile_backgroud" >

            <aym.view.asyimgview.AsyImgView
                android:id="@+id/index3_aiv_avata"
                style="@style/text_padding_all_5dip"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:src="@drawable/user_order_datile_avatar" >
            </aym.view.asyimgview.AsyImgView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/index3_aiv_avata"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dip"
                    android:layout_marginTop="3dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/index3_tv_top_logistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:textColor="@color/TextColorWhite" />

                    <TextView
                        android:id="@+id/index3_tv_top_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/TextColorWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dip"
                    android:layout_marginTop="3dip"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/index3_tv_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dip"
                        android:text="@string/user_order_datile_tv_num"
                        android:textColor="@color/TextColorWhite" />

                    <com.striveen.express.view.LayoutProductCommentStartView
                        android:id="@+id/index3_lcsv_start3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/index3_iv_top_phone"
                style="@style/text_padding_all_5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="iv_top_phone"
                android:src="@drawable/user_order_datile_phone" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.baidu.mapapi.map.MapView
                android:id="@+id/index3_my_mapv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" >
            </com.baidu.mapapi.map.MapView>

            <ImageView
                android:id="@+id/index3_iv_map_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dip"
                android:layout_marginTop="-72dip"
                android:clickable="true"
                android:onClick="iv_map_locate"
                android:src="@drawable/index_map_locate"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/index3_rl_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shoppNumbackColor"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/index3_rl1"
                        style="@style/text_padding_l_10dip"
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user_order_datile_backgroup1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/index3_rl2"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="-8dip"
                        android:layout_toRightOf="@+id/index3_rl2"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/index3_tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dip"
                                android:text="@string/index_tv_type_1"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/index3_tv_start_addr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/item_user_order_tv_start"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/index3_tv_time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dip"
                            android:text="@string/item_user_order_tv_time"
                            android:textColor="@color/text_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/index3_rl2"
                        style="@style/text_padding_l_10dip"
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/index3_rl1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user_order_datile_point" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user_order_datile_backgroup1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/index3_rl4"
                        style="@style/text_padding_l_10dip"
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/index3_rl2"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user_order_datile_point" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user_order_datile_backgroup1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/index3_rl4"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="-8dip"
                        android:layout_toRightOf="@+id/index3_rl4"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/index3_tv_orders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dip"
                                android:text="@string/user_order_datile_tv_have_orders"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/index3_tv_end_addr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/item_user_order_tv_start"
                                android:textSize="15sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/index3_tv_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dip"
                            android:text="@string/item_user_order_tv_time"
                            android:textColor="@color/text_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/index3_rl6"
                        style="@style/text_padding_l_10dip"
                        android:layout_width="70dip"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/index3_rl4"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/user_order_datile_last" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/index3_ll7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/index3_rl6"
                        android:layout_alignTop="@+id/index3_rl6"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/index3_rl6"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="3dip"
                            android:text="@string/user_order_datile_tv_wait"
                            android:textSize="17sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/index3_iv_pull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:onClick="pull_down"
                        android:src="@drawable/index3_pull_down" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/index3_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/index_bottom_backgroup" >

        <TextView
            android:id="@+id/index3_tv_bottom_immediately_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/index_iv_recording1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="tv_bottom_immediately_send"
            android:text="@string/index_tv_confirm_receipt1"
            android:textColor="@color/TextColorWhite"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>