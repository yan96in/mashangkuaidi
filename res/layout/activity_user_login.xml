<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/text_padding_tb_5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/user_login_iv_phone"
            style="@style/text_gray_color_pad5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_login_phone" />

        <EditText
            android:id="@+id/user_login_et_phone"
            style="@style/etpersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/user_login_iv_top"
            android:layout_toRightOf="@+id/user_login_iv_phone"
            android:background="@null"
            android:hint="@string/user_et_enter_phone"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="11"
            android:maxLines="1"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/user_login_iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dip"
            android:src="@drawable/user_login_remove" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/all_line" />

    <RelativeLayout
        style="@style/text_padding_tb_8dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/user_login_et_verification"
            style="@style/etpersonal12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/user_login_bt_verification"
            android:background="@null"
            android:hint="@string/user_et_enter_verification"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_login_bt_verification"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="3dip"
            android:background="@drawable/user_login_bt_verification"
            android:gravity="center"
            android:text="@string/user_tv_verification"
            android:textColor="@color/TextColorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/all_line" />

    <Button
        android:id="@+id/user_login_bt_login"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/user_login_bt"
        android:text="@string/user_login_send1"
        android:textColor="@color/TextColorWhite"
        android:textSize="20sp" />

</LinearLayout>